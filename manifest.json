{
  "name": "Photon REMASTERED",
  "description": "Adds advanced features and tools to Photon for a better, faster and safer trading experience. Built for serious memecoin traders.",
  "version": "1.25",
  "manifest_version": 3,
  "icons": {
    "128": "img/remastered-logo.png"
  },
  "action": {
    "default_icon": { "128": "img/remastered-logo.png", "16": "img/remastered-logo.png", "48": "img/remastered-logo.png" },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "host_permissions": [ "*://*.photon-sol.tinyastro.io/*", "*://*.pump.fun/*" ],
  "permissions": [ "tabs", "storage", "offscreen" ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["*://*.photon-sol.tinyastro.io/*"],
      "js": ["lib/chart.js", "dist/remastered.bundle.js"],
      "css": ["css/remastered-core.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["themes/*.css", "img/*.png", "offscreen.html"],
      "matches": ["*://photon-sol.tinyastro.io/*"]
    }
  ]
}